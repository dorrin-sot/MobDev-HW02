<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="LightLocationApp" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnPrimary">@color/primary_text</item>
        <item name="colorOnSecondary">@color/secondary_text</item>
        <item name="iconTint">@color/icons</item>
        <item name="divider">@color/divider</item>
        <item name="placeholder_color">@color/bookmark_item_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="name">@string/LightLocationTheme</item>

    </style>

    <style name="DarkLocationApp" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnPrimary">@color/primary_text</item>
        <item name="colorOnSecondary">@color/secondary_text</item>
        <item name="iconTint">@color/icons</item>
        <item name="divider">@color/divider</item>
        <item name="placeholder_color">@color/bookmark_item</item>
        <item name="name">@string/DarkLocationTheme</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>